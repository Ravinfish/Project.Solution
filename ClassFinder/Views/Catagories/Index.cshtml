@{
  Layout = "_Layout";
}

@using ClassFinder.Models;
@model List<ClassFinder.Models.Category>

<h1>Catagory List</h1>

@if (@Model.Count == 0)
{
  <h3>No catagories have been added yet...</h3>
}
@foreach (Category category in Model)
{
  <h4>@Html.ActionLink($"{category.Name}", new { id = category.CategoryId })</h4>
}

<button>@Html.ActionLink("Add new Company", "Create", "Company")</button>