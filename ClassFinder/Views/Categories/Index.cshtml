@{
  Layout = "_Layout";
}

@using ClassFinder.Models
@model List<ClassFinder.Models.Category>

<h1>Category List</h1>

@if (Model.Count == 0)
{
  <h3>No categories have been added yet...</h3>
}
else
{
  foreach (var category in Model)
  {
    <h4>@Html.ActionLink(category.Name, "Details", "Categories", new { id = category.CategoryId }, null)</h4>
  }
}

<button>@Html.ActionLink("Add new Category", "Create", "Categories")</button>