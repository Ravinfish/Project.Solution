@{
  Layout = "_Layout";
}

@model ClassFinder.Models.Company

<h4>Add a Business</h4>
<hr />
<p><strong>NOTE:</strong> You need to have at least one category before you can add a business!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Categories") to create a category.</p>
<hr />
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br />
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  <br />
  @Html.LabelFor(model => model.Owner)
  @Html.TextBoxFor(model => model.Owner)
  <br />
  @Html.LabelFor(model => model.Address)
  @Html.TextBoxFor(model => model.Address)
  <br />
  @Html.LabelFor(model => model.WebsiteUrl)
  @Html.TextBoxFor(model => model.WebsiteUrl, new { @class = "form-control" })
  <br />
  @Html.LabelFor(model => model.Category)
  @Html.DropDownList("CategoryId")
  <br />
  <input type="submit" value="Add Company" />
}