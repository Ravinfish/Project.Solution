@{
  Layout = "_Layout";
}

@model ClassFinder.Models.Company

<h2>Edit</h2>
<h4>Edit this Business: @Html.DisplayFor(model => model.Name)</h4>
<hr />

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br />
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  <br />
  @Html.LabelFor(model => model.Owner)
  @Html.TextBoxFor(model => model.Owner)
  <br />
  @Html.LabelFor(model => model.Address)
  @Html.TextBoxFor(model => model.Address)
  <br />
  <div class="form-group">
    <label asp-for="CategoryId" class="control-label"></label>
    @Html.DropDownList("CategoryId", ViewData["CategoryId"] as SelectList, "Select Category", new
      {
        @class =
        "form-control"
      })
  </div>
  <br />
  <input type="submit" value="Update" />
}