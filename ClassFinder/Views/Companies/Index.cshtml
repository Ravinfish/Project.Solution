@{
  Layout = "_Layout";
}

@using ClassFinder.Models;
@model List<ClassFinder.Models.Company>;
<h1>Company List</h1>

@if (@Model.Count == 0)
{
  <h3>No companies have been added yet..</h3>
}
else
{
  @foreach (Company company in Model)
  {
   <h4>@Html.ActionLink($"{company.Name}", "Details", new { id = company.CompanyId }) | @(company.Category != null ? company.Category.Name : "No Category")</h4>

  }
}
<p>Go to @Html.ActionLink("this page", "Create", "Companies") to create add a company.</p>